@using ComputerVision.AppServices.TransportModels.Response
@model ImageInfo

<form asp-action="Index" asp-controller="Home" method="post" enctype="multipart/form-data">
  <h1>Computer Vision API</h1>
  <div>
    <h3>Выберите файл для загрузки</h3>
    <input type="file" name="uploadedFile" /><br>
    <input type="submit" value="Загрузить" />
    @if (Model != null)
    {
        <div style="margin-top: 20px; display: flex">            
            <div  style="margin: auto;">
                <img src="~/images/@Model.Metadata.FileName" height="300" />
            </div>
            <div style="margin-left: 20px;">
                <h2>Image Information</h2>
                <h3>Caption : </h3> 
                <p style="color:green"> @Model.Description.Captions[0].Text </p>
                <h3>Categories Name :  </h3>
                <p style="color:green"> @Model.Categories[0].Name  </p>
                <h3>Possible Tags :  </h3>
                <p style="color:green"> @String.Join(", ", Model.Description.Tags.ToArray())</p>
                <h3>Format :  </h3>
                <p style="color:green"> @Model.Metadata.Format</p>
            </div>
    </div>
    }
  </div>
</form>
